@{
    ViewData["Title"] = "Antrenörlerimiz";
}

<div class="sub-banner-section trainers-banner-section">
    <section class="banner-section banner-section--gradient">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="banner-section-content">
                        <h1 data-aos="fade-up">Antrenörlerimiz</h1>

                        <div class="btn_wrapper">
                            <span class="sub_home_span">Ana Sayfa</span>
                            <span class="mx-2 text-white">-</span>
                            <span class="sub_span">Antrenörlerimiz</span>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@await Component.InvokeAsync("TrainersList", new { page = 1, pageSize = 12, isActive = true })

<style>
    /* ✅ sub-banner gri/varsayılan background'ı iptal */
    .trainers-banner-section {
        background: transparent !important;
        background-image: none !important;
    }

    /* ✅ About'taki gibi kırmızı -> siyah geçiş */
    .banner-section--gradient {
        background: linear-gradient(180deg, #b30000 0%, #000000 100%) !important;
        padding: 180px 0 100px 0; /* menü üstte olduğu için title aşağıda kalsın */
        position: relative;
        overflow: hidden;
        text-align: center;
        z-index: 1;
    }

        /* ✅ temadaki overlayler tıklamayı bozmasın */
        .banner-section--gradient::before,
        .banner-section--gradient::after {
            pointer-events: none !important;
        }

    .banner-section-content h1 {
        color: #fff !important;
        font-weight: 900;
        letter-spacing: .02em;
        margin-bottom: 14px;
        text-transform: none;
    }

    /* ✅ breadcrumb kapsülü */
    .banner-section-content .btn_wrapper {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 18px;
        border-radius: 999px;
        border: 1px solid rgba(255,255,255,.22);
        background: rgba(0,0,0,.18);
        backdrop-filter: blur(6px);
    }

    .sub_home_span {
        color: rgba(255,255,255,.85) !important;
    }

    .sub_span {
        color: #fff !important;
        font-weight: 700;
    }

    /* ✅ Layout menüsü şeffaf + banner'ın üstünde kalsın */
    .banner-section-outer {
        background: transparent !important;
        background-image: none !important;
        z-index: 1055 !important; /* bootstrap üstü */
    }

    header,
    .navbar {
        background: transparent !important;
    }
</style>
