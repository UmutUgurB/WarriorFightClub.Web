@using WarriorFightClub.WebUI.ApiDtos
@using WarriorFightClub.WebUI.Components.ServicesList
@model ServicesListVm

<section class="our_services_section">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="our_services_content">
                    <h5>HİZMETLERİMİZ</h5>
                    <h2>Daha iyi hareket etmek ve daha sağlıklı hissetmek için çözümler</h2>
                </div>
            </div>
        </div>

        <figure class="our_services_left_icon left_icon mb-0">
            <img src="~/warrior-fight-club/xtreme-fitness-placeholder/assets/images/our_services_left_icon.png" alt="" class="img-fluid">
        </figure>

        <figure class="our_services_right_icon right_icon mb-0">
            <img src="~/warrior-fight-club/xtreme-fitness-placeholder/assets/images/our_services_right_icon.png" alt="" class="img-fluid">
        </figure>

        @if (Model.Items is null || Model.Items.Count == 0)
        {
            <div class="row mt-4">
                <div class="col-12">
                    <div class="empty-state">
                        Şu anda görüntülenecek hizmet bulunamadı.
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row mt-4">
                @foreach (var s in Model.Items)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                        <div class="our_services_box">
                            <figure class="mb-0">
                                <img src="@s.ImageUrl" alt="@s.Title" class="img-fluid">
                            </figure>

                            <div class="our_services_box_content">
                                <h4>@s.Title</h4>
                                <p>@(s.Description?.Length > 120 ? s.Description.Substring(0, 120) + "..." : s.Description)</p>

                                <a class="text-decoration-none" href="@Url.Action("Index","Service")">
                                    Detayları Gör
                                    <i class="fa-solid fa-arrow-right-long"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @* ✅ pagination *@
            @if (Model.TotalPages > 1)
            {
                <div class="row mt-4">
                    <div class="col-12 d-flex justify-content-center">
                        <nav aria-label="Hizmet sayfalama">
                            <ul class="pagination pagination-dark mb-0">
                                <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Index", "Service", new { page = Model.Page - 1 })">Önceki</a>
                                </li>

                                @for (int p = 1; p <= Model.TotalPages; p++)
                                {
                                    <li class="page-item @(p == Model.Page ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Index", "Service", new { page = p })">@p</a>
                                    </li>
                                }

                                <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Index", "Service", new { page = Model.Page + 1 })">Sonraki</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            }
        }

    </div>
</section>

<style>
    /* senin css'in aynı kalsın; sadece grid'i 3 kolon yaptım */
    .our_services_section {
        position: relative;
        padding: 80px 0 70px;
        background: #0b0b0f;
        overflow: hidden;
    }

    .our_services_content {
        text-align: center;
        margin-bottom: 26px;
    }

        .our_services_content h5 {
            font-size: 13px;
            letter-spacing: .22em;
            font-weight: 700;
            color: rgba(255,255,255,.70);
            margin-bottom: 10px;
        }

        .our_services_content h2 {
            font-size: clamp(22px, 2.4vw, 34px);
            line-height: 1.15;
            font-weight: 800;
            color: #fff;
            max-width: 820px;
            margin: 0 auto;
        }

    .our_services_left_icon, .our_services_right_icon {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        opacity: .18;
        pointer-events: none;
        filter: blur(.2px);
    }

    .our_services_left_icon {
        left: -30px;
    }

    .our_services_right_icon {
        right: -30px;
    }

    .our_services_section .row.mt-4 {
        margin-top: 26px !important;
    }

    .our_services_box {
        background: rgba(255,255,255,.06);
        border: 1px solid rgba(255,255,255,.10);
        border-radius: 18px;
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
        box-shadow: 0 10px 30px rgba(0,0,0,.25);
        transition: transform .18s ease, box-shadow .18s ease, border-color .18s ease;
    }

        .our_services_box:hover {
            transform: translateY(-4px);
            box-shadow: 0 18px 55px rgba(0,0,0,.35);
            border-color: rgba(255,255,255,.22);
        }

        .our_services_box figure {
            margin: 0;
            position: relative;
            width: 100%;
            aspect-ratio: 16 / 10;
            background: rgba(0,0,0,.25);
            overflow: hidden;
        }

            .our_services_box figure img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                object-position: center;
                display: block;
                transform: scale(1.02);
                transition: transform .25s ease;
            }

        .our_services_box:hover figure img {
            transform: scale(1.06);
        }

    .our_services_box_content {
        padding: 18px 18px 16px;
        color: #fff;
        display: flex;
        flex-direction: column;
        gap: 10px;
        flex: 1;
    }

        .our_services_box_content h4 {
            margin: 0;
            font-size: 18px;
            font-weight: 800;
            letter-spacing: .01em;
        }

        .our_services_box_content p {
            margin: 0;
            color: rgba(255,255,255,.78);
            font-size: 14px;
            line-height: 1.55;
            min-height: 44px;
        }

        .our_services_box_content a {
            margin-top: auto;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 10px 12px;
            border-radius: 12px;
            border: 1px solid rgba(255,255,255,.14);
            background: rgba(255,255,255,.06);
            color: #fff;
            font-weight: 700;
            font-size: 13px;
            transition: background .18s ease, border-color .18s ease, transform .18s ease;
        }

            .our_services_box_content a:hover {
                background: rgba(255,255,255,.10);
                border-color: rgba(255,255,255,.25);
                transform: translateY(-1px);
            }

    .empty-state {
        background: rgba(255,255,255,.06);
        border: 1px dashed rgba(255,255,255,.18);
        border-radius: 16px;
        padding: 18px;
        color: rgba(255,255,255,.75);
        text-align: center;
    }

    .pagination-dark .page-link {
        background: rgba(255,255,255,.06);
        border-color: rgba(255,255,255,.12);
        color: #fff;
    }

    .pagination-dark .page-item.active .page-link {
        background: rgba(255,255,255,.14);
        border-color: rgba(255,255,255,.25);
    }

    .pagination-dark .page-item.disabled .page-link {
        opacity: .5;
    }
</style>
