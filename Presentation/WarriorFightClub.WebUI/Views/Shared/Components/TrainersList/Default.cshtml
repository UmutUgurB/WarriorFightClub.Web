@using WarriorFightClub.WebUI.ApiDtos
@model PagedResult<TrainerDto>

<section class="trainers_section">
    <div class="container">
        <div class="row">
            @if (Model?.Items == null || Model.Items.Count == 0)
            {
                <div class="col-12">
                    <p>Antrenör bulunamadı.</p>
                </div>
            }
            else
            {
                foreach (var t in Model.Items)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                        <div class="trainer_card">
                            <div class="trainer_img">
                                <img src="@t.ImageUrl" alt="@($"{t.Name} {t.Surname}")" />
                            </div>
                            <div class="trainer_body">
                                <h4>@t.Name @t.Surname</h4>
                                <p>@t.Description</p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<style>
    .trainers_section {
        padding: 80px 0;
        background: #0b0b0f;
    }

    .trainer_card {
        background: rgba(255,255,255,.06);
        border: 1px solid rgba(255,255,255,.10);
        border-radius: 18px;
        overflow: hidden;
        height: 100%;
    }

    .trainer_img {
        width: 100%;
        aspect-ratio: 4/3;
        overflow: hidden;
    }

        .trainer_img img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

    .trainer_body {
        padding: 16px;
        color: #fff;
    }

        .trainer_body h4 {
            margin: 0 0 8px;
            font-weight: 800;
        }

        .trainer_body p {
            margin: 0;
            color: rgba(255,255,255,.78);
            font-size: 14px;
            line-height: 1.6;
        }
</style>
